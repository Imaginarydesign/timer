<h1>Employees <%= link_to 'Add New', new_employee_path, class: "pull-right btn btn-default"  %></h1>

<% if notice %>
<div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td class="text-right">
          <%= link_to 'Show', employee, class: "btn btn-sm btn-default" %>
          <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-sm btn-default" %>
          <%= link_to 'Destroy', employee, class: "btn btn-sm btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


