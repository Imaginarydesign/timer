<h1>Employees</h1>
<%= link_to 'New Employee', new_employee_path %>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.email %></td>
        <td class="text-right">
          <%= link_to 'Show', employee, class: "btn btn-sm btn-default" %>
          <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-sm btn-default" %>
          <%= link_to 'Destroy', employee, class: "btn btn-sm btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>


