<h1>Entries <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span></h1>
<%= link_to 'New Entry', new_entry_path %>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Task name</th>
      <th>Time spent</th>
      <th>Project</th>
      <th>Employee</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= entry.name %></td>
        <td><%= entry.time %></td>
        <td><%= entry.project.name %></td>
        <td><%= entry.employee.name %></td>
        <td class="text-right">
          <%= link_to 'Show', entry, class: "btn btn-sm btn-default" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "btn btn-sm btn-default" %>
          <%= link_to 'Destroy', entry, class: "btn btn-sm btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>


