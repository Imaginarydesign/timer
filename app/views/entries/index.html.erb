<h1>Entries</h1>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Task name</th>
      <th>Time spent</th>
      <th>Project</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= entry.name %></td>
        <td><%= entry.time %></td>
        <td><%= entry.project.name %></td>
        <td><%= entry.employee.name %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, class: "btn btn-default" %>
